BINDIR=/usr/local/simpleban
PARSER=${BINDIR}/sban-log_parser
BLOCKER=${BINDIR}/sban-addr_blocker

VARDIR=/var/lib/simpleban
DB=${VARDIR}/sban.db

PRUNE_DB=30

TSP='/usr/bin/tsp -nf'

IPT4='/sbin/iptables'
IPT6='/sbin/ip6tables'

SEARCH_CMD='/bin/grep -E'
EXTRACT_CMD='/bin/sed'

ENABLE_BAN=0
ENABLE_UNBAN=1
ENABLE_LOG_IF_MATCH=1

ADDR_TRIGGERS='60:5:3600'

CHAIN='BANNED'

CIDR_V4=24
CIDR_V6=64

WHITELIST='127.0.0.1,::1'
